{
  "name": "finmind",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "./scripts/bun run --cwd apps/api dev",
    "dev:web": "./scripts/bun run --cwd apps/web dev",
    "build:web": "./scripts/bun run --cwd apps/web build",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "./scripts/bun run typecheck:shared && ./scripts/bun run typecheck:api && ./scripts/bun run typecheck:web",
    "typecheck:api": "./scripts/bun run --cwd apps/api typecheck",
    "typecheck:web": "./scripts/bun run --cwd apps/web typecheck",
    "typecheck:shared": "./scripts/bun run --cwd packages/shared typecheck",
    "test": "./scripts/bun run test:shared && ./scripts/bun run test:api && ./scripts/bun run test:web",
    "test:api": "./scripts/bun run --cwd apps/api test",
    "test:web": "./scripts/bun run --cwd apps/web test",
    "test:shared": "./scripts/bun run --cwd packages/shared test"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/bun": "latest",
    "@types/node": "^22.10.2",
    "eslint": "^9.16.0",
    "globals": "^15.13.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.2"
  }
}
